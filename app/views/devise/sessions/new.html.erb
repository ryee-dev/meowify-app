<div class="hero container devise-forms">
  <br>
  <div class="box">
    <h2>Log in</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :username, class: "label" %>
        <%= f.text_field :login, class: "input" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "off", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "checkbox" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button is-primary is-rounded" %>
      </div>
      <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>